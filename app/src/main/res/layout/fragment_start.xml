<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.views.StartFragment">

    <data>
        <variable
            name="viewModel"
            type="com.example.clean_quiz.ui.viewmodel.StartViewModel" />

        <variable
            name="spinnerAdapter"
            type="android.widget.SpinnerAdapter" />

        <import type="android.view.View" />


    </data>

    <FrameLayout
        android:id="@+id/frame_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/userName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter a Name">


                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.name}"/>

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/category_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">

                <AutoCompleteTextView
                    android:id="@+id/autoCompleteTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:text="@{viewModel.category}"/>
                <!--android:onItemSelectedListener="@{viewModel.spinnerListener}"-->


            </com.google.android.material.textfield.TextInputLayout>

            <RadioGroup
                android:id="@+id/difficulty_radiogroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checkedButton="@{viewModel.difficulty}"
                android:orientation="horizontal">

                <com.google.android.material.radiobutton.MaterialRadioButton

                    android:id="@+id/easy_radio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="easy" />

                <com.google.android.material.radiobutton.MaterialRadioButton

                    android:id="@+id/medium_radio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="medium" />

                <com.google.android.material.radiobutton.MaterialRadioButton

                    android:id="@+id/hard_radio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="hard" />

            </RadioGroup>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/limit_text"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Choose between 1 and 20">


                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberSigned"
                    android:tag="numberSigned"
                    android:text="@{viewModel.questionAmount}"/>

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/startButton"
                android:layout_width="297dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="Start"

                />

        </LinearLayout>
    </FrameLayout>
</layout>