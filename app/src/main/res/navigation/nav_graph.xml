<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/startFragment">

    <fragment
        android:id="@+id/startFragment"
        android:name="com.example.clean_quiz.ui.views.StartFragment"
        android:label="fragment_start"
        tools:layout="@layout/fragment_start" >
        <action
            android:id="@+id/next_quiz"
            app:destination="@id/quizFragment"
            app:popUpTo="@id/quizFragment">
        </action>
       </fragment>
    <fragment
        android:id="@+id/quizFragment"
        android:name="com.example.clean_quiz.ui.views.QuizFragment"
        android:label="quiz_fragment"
        tools:layout="@layout/quiz_fragment" >
        <action
            android:id="@+id/action_quizFragment_to_scoreFragment"
            app:destination="@id/scoreFragment" />
        <argument
            android:name="passUserParam"
            app:argType="long"
         />
    </fragment>
    <fragment
        android:id="@+id/scoreFragment"
        android:name="com.example.clean_quiz.ui.views.ScoreFragment"
        android:label="fragment_score"
        tools:layout="@layout/fragment_score" />


</navigation>